    <Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="838">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>

        <TabControl Width="796">
            <TabItem Header="Teams">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                        <Button Content="Import JSON…" Command="{Binding ImportJsonCommand}" />
                    </StackPanel>

                    <GroupBox Grid.Row="1" Header="Search and Pagination" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Team Name"/>
                                <TextBox Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0">
                                <TextBlock Text="Headquarters"/>
                                <TextBox Text="{Binding SearchHQ, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="8,0">
                                <TextBlock Text="Team Principal"/>
                                <TextBox Text="{Binding SearchPrincipal, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" Margin="8,0" VerticalAlignment="Bottom">
                                <TextBlock VerticalAlignment="Center" Text="Wins:"/>
                                <TextBox Width="60" Margin="6,0,0,0"
                                         Text="{Binding SearchWins, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" Margin="8,0" VerticalAlignment="Bottom">
                                <TextBlock VerticalAlignment="Center" Text="Year:"/>
                                <TextBox Width="60" Margin="6,0,0,0"
                                         Text="{Binding SearchYear, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <CheckBox Grid.Row="0" Grid.Column="5" Content="Exact"
                                      IsChecked="{Binding SearchExact}"
                                      VerticalAlignment="Bottom" Margin="8,0,0,0"/>

                            <StackPanel Grid.Row="1" Grid.ColumnSpan="6"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,8,0,0">
                                <Button Content="Search" Command="{Binding SearchTeamsCommand}" />
                                <Button Content="Prev" Margin="8,0,6,0" Command="{Binding PrevPageCommand}"/>
                                <TextBlock VerticalAlignment="Center" Text="{Binding PageDisplay}" Margin="0,0,6,0"/>
                                <Button Content="Next" Command="{Binding NextPageCommand}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding Teams}" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" Margin="0,0,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Team" Binding="{Binding TeamName}" Width="*" />
                            <DataGridTextColumn Header="HQ" Binding="{Binding Headquarters}" Width="*" />
                            <DataGridTextColumn Header="Principal" Binding="{Binding TeamPrincipal}" Width="*" />
                            <DataGridTextColumn Header="Titles" Binding="{Binding ConstructorsChampionshipWins}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="3" Header="Create Team" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Team Principal"/>
                                <TextBox Text="{Binding NewTeamPrincipal}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Team Name"/>
                                <TextBox Text="{Binding NewTeamName}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Headquarters"/>
                                <TextBox Text="{Binding NewTeamHq}"/>
                            </StackPanel>

                            <Button Grid.Column="3"
            Content="Create"
            Width="120" Height="32"
            VerticalAlignment="Bottom"
            Command="{Binding CreateTeamCommand}"/>
                        </Grid>
                    </GroupBox>


                </Grid>
            </TabItem>

            <TabItem Header="Budgets">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="List All Budgets" Command="{Binding LoadBudgetsCommand}" />
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Budgets}" SelectedItem="{Binding SelectedBudget}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                            <DataGridTextColumn Header="Team" Binding="{Binding Team.TeamName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="2" Header="Update Annual Budget" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="8">
                            <StackPanel Width="200">
                                <TextBlock Text="New Team Name (optional)"/>
                                <TextBox Text="{Binding UpdateTeamName}"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="12,0,0,0">
                                <TextBlock Text="New Year (optional)"/>
                                <TextBox Text="{Binding UpdateYear}"/>
                            </StackPanel>
                            <Button Content="Update Selected" Width="140" Margin="12,22,0,0"
                                    Command="{Binding UpdateAnnualBudgetCommand}"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Budget Items">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="List All Items" Command="{Binding LoadItemsCommand}"/>
                        <Button Content="Delete Selected" Margin="8,0,0,0" Command="{Binding DeleteSelectedItemCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="2" Header="Create Item" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="8">
                            <StackPanel Width="220">
                                <TextBlock Text="Category"/>
                                <TextBox Text="{Binding NewItemCategory}"/>
                            </StackPanel>
                            <StackPanel Width="150" Margin="12,0,0,0">
                                <TextBlock Text="Amount"/>
                                <TextBox Text="{Binding NewItemAmount}"/>
                            </StackPanel>
                            <Button Content="Create" Width="100" Margin="12,22,0,0"
                                    Command="{Binding CreateItemCommand}"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Reports">
                <StackPanel Margin="10">
                    <GroupBox Header="Budget Prediction">
                        <StackPanel Orientation="Horizontal" Margin="8">
                            <StackPanel Width="220">
                                <TextBlock Text="Team Name"/>
                                <TextBox Text="{Binding PredictionTeamName}"/>
                            </StackPanel>
                            <StackPanel Width="180" Margin="12,0,0,0">
                                <TextBlock Text="Planned Budget"/>
                                <TextBox Text="{Binding PlannedBudget}"/>
                            </StackPanel>
                            <Button Content="Generate" Margin="12,22,0,0"
                                    Command="{Binding GeneratePredictionReportCommand}"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Category Report" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="8">
                            <StackPanel Width="220">
                                <TextBlock Text="Team Name"/>
                                <TextBox Text="{Binding CategoryTeamName}"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="12,0,0,0">
                                <TextBlock Text="Year"/>
                                <TextBox Text="{Binding CategoryYear}"/>
                            </StackPanel>
                            <Button Content="Generate" Margin="12,22,0,0"
                                    Command="{Binding GenerateCategoryReportCommand}"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
